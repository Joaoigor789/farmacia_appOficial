<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#5D4037"/> <!-- Marrom mais escuro ao pressionar -->
            <corners android:radius="10dp"/>
            <stroke android:width="3dp" android:color="#D7CCC8"/> <!-- Contorno bege -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#795548"/> <!-- Marrom rústico padrão -->
            <corners android:radius="10dp"/>
            <stroke android:width="3dp" android:color="#D7CCC8"/> <!-- Contorno bege -->
        </shape>
    </item>
</selector>
