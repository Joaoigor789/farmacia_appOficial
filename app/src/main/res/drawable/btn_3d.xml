<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#005BBB"/> <!-- Cor mais escura quando pressionado -->
            <corners android:radius="12dp"/>
            <padding android:left="10dp" android:top="10dp" android:right="10dp" android:bottom="10dp"/>
            <stroke android:width="2dp" android:color="#003F7F"/>
        </shape>
    </item>
    <item>
        <layer-list>
            <item android:right="3dp" android:bottom="3dp">
                <shape android:shape="rectangle">
                    <solid android:color="#333333" /> <!-- sombra -->
                    <corners android:radius="12dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <gradient
                            android:startColor="#4A90E2"
                            android:endColor="#357ABD"
                            android:angle="270"/>
                    <corners android:radius="12dp"/>
                    <stroke android:width="2dp" android:color="#1C4FA1"/>
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
