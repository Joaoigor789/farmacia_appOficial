<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FF7043"/> <!-- Cor quando selecionado -->
            <corners android:radius="8dp"/>
            <shadowColor android:color="#000000" android:radius="6dp"/>
            <padding android:left="16dp" android:top="10dp" android:right="16dp" android:bottom="10dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFAB91"/> <!-- Cor quando nÃ£o selecionado -->
            <corners android:radius="8dp"/>
            <shadowColor android:color="#000000" android:radius="4dp"/>
            <padding android:left="16dp" android:top="10dp" android:right="16dp" android:bottom="10dp"/>
        </shape>
    </item>
</selector>
