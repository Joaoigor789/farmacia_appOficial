<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              android:gravity="center"
              android:background="@drawable/bg_gradient"
              >

    <!-- Título -->
    <TextView
            android:id="@+id/cookieConsentTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pol_tica_de_cookies"
            android:textSize="18sp"
            style="@style/Text3D"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginBottom="16dp"
            android:gravity="center"/>

    <!-- Mensagem de Consentimento -->
    <TextView
            android:id="@+id/cookieConsentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/este_aplicativo_usa_cookies_para_melhorar_sua_experi_ncia_voc_aceita_o_uso_de_cookies"
            android:textSize="14sp"
            android:textStyle="bold"
            style="@style/Text3D"
            android:textColor="@android:color/black"
            android:layout_marginBottom="32dp"
            android:gravity="center"/>

    <!-- Botões para aceitar ou recusar -->
    <LinearLayout
            style="?android:attr/buttonBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

        <!-- Botão Aceitar -->
        <Button
                android:id="@+id/acceptCookies"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/aceitar"
                style="@style/Text3D"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary"
                android:layout_marginEnd="16dp"
                tools:ignore="ButtonStyle"/>

        <!-- Botão Recusar -->
        <Button
                android:id="@+id/declineCookies"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/recusar"
                style="@style/Text3D"
                android:textColor="#5E35B1"
                android:textStyle="bold"
                android:background="@color/colorAccent"
                tools:ignore="ButtonStyle"/>
    </LinearLayout>

</LinearLayout>
