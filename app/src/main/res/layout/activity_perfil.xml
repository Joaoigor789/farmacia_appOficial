<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="24dp">

        <!-- Foto de perfil -->
        <ImageView
                android:id="@+id/foto_perfil"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/ic_person"
                android:contentDescription="Foto de Perfil"
                android:layout_marginBottom="16dp" />

        <!-- Nome do usuário -->
        <TextView
                android:id="@+id/nome_usuario"
                android:text="João Igor"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <!-- Curso / Turma -->
        <TextView
                android:id="@+id/curso_usuario"
                android:text="Farmácia - Turma 2025"
                android:textSize="16sp"
                android:layout_marginBottom="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <!-- Progresso de estudos -->
        <TextView
                android:text="Progresso de Estudo"
                android:textSize="16sp"
                android:layout_marginBottom="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        <ProgressBar
                android:id="@+id/progresso_estudo"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:progress="60"
                android:max="100"
                android:layout_marginBottom="24dp" />

        <!-- Botão Editar Perfil -->
        <Button
                android:id="@+id/btn_editar_perfil"
                android:text="Editar Perfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp" />

        <!-- Botão Sair da Conta -->
        <Button
                android:id="@+id/btn_sair"
                android:text="Sair"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/red"
                android:textColor="@android:color/white" />

    </LinearLayout>
</ScrollView>
