<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp"
            android:background="@drawable/bg_gradient"
            android:fillViewport="true">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <ImageView
                android:id="@+id/gif_background"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:elevation="0dp"
                tools:ignore="ContentDescription,ImageContrastCheck"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/configuracoes"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:paddingBottom="16dp"
                    style="@style/Text3D"
                    android:textColor="#EF6C00"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="10dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ativar_microfone"
                    style="@style/Text3D"
                    android:textSize="18sp"
                    android:textColor="#DD2C00"/>

            <Switch
                    android:id="@+id/mic_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:minHeight="48dp"
                    android:thumbTint="@color/orange_color"
                    android:trackTint="@color/orange_color"
                    tools:ignore="DuplicateSpeakableTextCheck"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/modo_escuro"
                    android:textSize="18sp"
                    style="@style/Text3D"
                    android:textColor="#DD2C00"/>

            <Switch
                    android:id="@+id/dark_mode_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:thumbTint="@color/orange_color"
                    android:trackTint="@color/orange_color"
                    android:minHeight="48dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/notificacoes"
                    android:textSize="18sp"
                    style="@style/Text3D"
                    android:textColor="#DD2C00"/>

            <Switch
                    android:id="@+id/notification_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:thumbTint="@color/orange_color"
                    android:trackTint="@color/orange_color"
                    android:minHeight="48dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/localizacao"
                    android:textSize="18sp"
                    style="@style/Text3D"
                    android:textColor="#DD2C00"/>

            <Switch
                    android:id="@+id/location_switch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:minWidth="48dp"
                    android:thumbTint="@color/orange_color"
                    android:trackTint="@color/orange_color"
                    android:minHeight="48dp"/>

            <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="10dp" />

            <TextView
                    android:id="@+id/volume_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/volume"
                    android:textSize="18sp"
                    style="@style/Text3D"
                    android:textColor="#DD2C00"/>

            <SeekBar
                    android:id="@+id/volume_seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progressDrawable="@drawable/seekbar_style"
                    android:thumbTint="@android:color/holo_orange_dark"/>

        </LinearLayout>
    </FrameLayout>
</ScrollView>
