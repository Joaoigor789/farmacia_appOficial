<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="16dp"
              android:background="@drawable/background_medieval">

    <!-- Texto de boas-vindas -->
    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bem_vindo_ao_reino_da_farm_cia_se_cadastre_e_entre_no_mundo_do_estudo"
            android:textSize="30sp"
            android:textColor="#009688"
            android:gravity="center"
            android:fontFamily="serif"
            android:paddingBottom="16dp"
            android:shadowColor="#000000"/>

    <!-- Campo para nome de usuário -->
    <EditText
            android:id="@+id/usernameField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="coloque um nome"
            android:hint="@string/nome_de_usu_rio"
            android:inputType="text"
            android:minHeight="48dp"
            android:background="@drawable/input_border_medieval"
            android:padding="10dp"
            android:textColor="@color/antique_white"
            android:textColorHint="#BCAAA4"
            tools:ignore="TextContrastCheck,VisualLintTextFieldSize"/>

    <!-- Campo para senha -->
    <EditText
            android:id="@+id/passwordField"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="digite sua senha"
            android:hint="@string/senha1"
            android:inputType="textPassword"
            android:minHeight="48dp"
            android:background="@drawable/input_border_medieval"
            android:padding="10dp"
            android:textColor="@color/antique_white"
            android:textColorHint="#BCAAA4"
            tools:ignore="TextContrastCheck,VisualLintTextFieldSize"/>

    <!-- Botão de registro -->
    <Button
            android:id="@+id/actionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cadastrar"
            android:background="@drawable/button_medieval"
            android:textColor="@color/golden"
            android:padding="12dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            tools:ignore="VisualLintButtonSize"/>

    <!-- Botão de login -->
    <Button
            android:id="@+id/loginButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/login1"
            android:background="@drawable/button_medieval"
            android:textColor="@color/golden"
            android:padding="12dp"
            android:textStyle="bold"
            android:fontFamily="serif"
            tools:ignore="VisualLintButtonSize"/>

    <!-- Ícone do usuário logado -->
    <ImageView
            android:id="@+id/userIcon1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_user_logged_in"
            android:layout_marginTop="20dp"
            android:visibility="gone"
            tools:ignore="ContentDescription"/>

    <!-- Mensagem indicando que o usuário está logado -->
    <TextView
            android:id="@+id/loggedInMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/voc_est_logado"
            android:textSize="16sp"
            android:textColor="#00796b"
            android:visibility="gone"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"/>

</LinearLayout>
