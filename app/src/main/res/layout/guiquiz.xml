<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:background="@drawable/bg_gradient"
              android:padding="16dp">

    <TextView
            android:id="@+id/questionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pergunta_aqui1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:textColor="#263238"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"/>

    <RadioGroup
            android:id="@+id/optionsGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RadioButton
                android:id="@+id/optionA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_o_a"
                android:background="@drawable/radio_button_bg"
                android:padding="12dp"
                android:elevation="4dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:layout_marginBottom="4dp"/>

        <RadioButton
                android:id="@+id/optionB"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_o_b"
                android:background="@drawable/radio_button_bg"
                android:padding="12dp"
                android:elevation="4dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:layout_marginBottom="4dp"/>

        <RadioButton
                android:id="@+id/optionC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_o_c"
                android:background="@drawable/radio_button_bg"
                android:padding="12dp"
                android:elevation="4dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:layout_marginBottom="4dp"/>

        <RadioButton
                android:id="@+id/optionD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_o_d"
                android:background="@drawable/radio_button_bg"
                android:padding="12dp"
                android:elevation="4dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:layout_marginBottom="4dp"/>

        <RadioButton
                android:id="@+id/optionE"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/op_o_e"
                android:background="@drawable/radio_button_bg"
                android:padding="12dp"
                android:elevation="4dp"
                android:shadowColor="#000000"
                android:shadowDx="2"
                android:shadowDy="2"
                android:shadowRadius="3"
                android:layout_marginBottom="4dp"/>
    </RadioGroup>

    <Button
            android:id="@+id/submitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/responder12"
            android:layout_marginTop="16dp"
            android:background="@drawable/button_bg"
            android:elevation="6dp"
            tools:ignore="VisualLintButtonSize"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"/>

    <TextView
            android:id="@+id/scoreText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/pontuacao"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:textColor="#212121"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"/>

</LinearLayout>