<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:padding="20dp"
              android:background="#F5F5F5"
              android:gravity="center">

    <!-- Visor do scanner de código de barras -->
    <com.journeyapps.barcodescanner.BarcodeView
            android:id="@+id/barcode_view"
            android:layout_width="match_parent"
            android:layout_height="250dp" />

    <TextView
            android:id="@+id/medicamento_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/escaneie_um_c_digo_de_barras"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingTop="20dp"
            android:gravity="center" />

    <!-- Botão para capturar manualmente (se necessário) -->
    <com.google.android.material.button.MaterialButton
            android:id="@+id/capture_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/capturar_c_digo"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:backgroundTint="#6200EE"
            android:layout_marginTop="16dp"
            android:layout_gravity="center"
            android:padding="12dp"
            app:cornerRadius="8dp" />

    <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="As informações do medicamento aparecerão aqui."
            android:textSize="16sp"
            android:textColor="#333333"
            android:gravity="center"
            android:padding="16dp" />
</LinearLayout>
